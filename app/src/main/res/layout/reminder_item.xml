<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#C9d2d4"

        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_poster_reminder"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_person_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/btn_reminder"
            android:layout_toEndOf="@id/img_poster_reminder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/img_poster_reminder"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="00:00 - 01/01/2001"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:text="00:00 - 01/01/2001"

                android:textSize="12sp" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/btn_reminder"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_cancel_presentation_24" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
